mixin post-content(post)
	div.post-content
		div.ui.grid.centered.two.column
			div.one.wide.column
				a.avatar(href='/posts?author='+post.author._id,data-title=post.author.name+'|'+({m: '男', f: '女', x: '保密'})[post.author.gender],data-content=post.author.bio)
					img.avatar(src='/img/'+post.author.avatar)
			div.column.post-wide
				div.ui.segment
					h3
						a(href='/posts/'+post._id) #{post.title}
					pre !{post.content}
					div
						span.tag #{post.created_at}
						span.tag.right 
							span 浏览(#{post.pv})
							span 留言(#{post.commentsCount})
							- if (user&&post.author._id&&user._id.toString()===post.author._id.toString())
								div.ui.inline.dropdown
									div.text
									i.dropdown.icon
									div.menu
										div.item
											a(href='/posts/'+post._id+'/edit') 编辑
										div.item
											a(href='/posts/'+post._id+'/remove') 删除




